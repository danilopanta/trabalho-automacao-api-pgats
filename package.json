{
  "name": "hotel-reservas-api",
  "version": "1.0.0",
  "description": "APIs REST e GraphQL para gerenciamento de reservas de hotel com autenticação JWT",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start-graphql": "node graphql/server.js",
    "dev-graphql": "nodemon graphql/server.js",
    "test": "mocha 'test/**/*.js' --timeout 10000 --reporter spec",
    "test:graphql": "mocha 'test/graphql/controller/*.js' --timeout 10000 --reporter spec",
    "test:rest": "mocha 'test/rest/controller/*.js' --timeout 10000 --reporter spec",
    "test:fluxo": "mocha 'test/graphql/fluxoCompletoTest.js' --timeout 10000 --reporter spec",
    "test:watch": "mocha 'test/**/*.js' --timeout 10000 --reporter spec --watch"
  },
  "keywords": [
    "api",
    "rest",
    "graphql",
    "express",
    "apollo-server",
    "hotel",
    "reservas",
    "jwt",
    "authentication",
    "swagger",
    "nodejs",
    "mocha",
    "chai"
  ],
  "author": "Danilo Panta",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/danilopanta/trabalho-automacao-api-pgats.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^9.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
